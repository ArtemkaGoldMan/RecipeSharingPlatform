@model WebClient.Models.RecipeViewModel

<h1>Edit Recipe</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" class="form-control" asp-for="Title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Category">Category</label>
        <input type="text" class="form-control" asp-for="Category" />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Creator">Creator</label>
        <input type="text" class="form-control" asp-for="Creator" />
        <span asp-validation-for="Creator" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Ingredients">Ingredients</label>
        <textarea class="form-control" asp-for="Ingredients"></textarea>
        <span asp-validation-for="Ingredients" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Instructions">Instructions</label>
        <textarea class="form-control" asp-for="Instructions"></textarea>
        <span asp-validation-for="Instructions" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
