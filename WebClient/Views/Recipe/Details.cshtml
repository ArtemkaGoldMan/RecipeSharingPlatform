@model WebClient.Models.RecipeViewModel
@{
    ViewData["Title"] = "Details";
}

<h1>@Model.Title</h1>
<p><strong>Category:</strong> @Model.Category</p>
<p><strong>Posted by:</strong> @Model.Username</p>

<h4>Description:</h4>
<p>@Model.Description</p>

<h4>Ingredients:</h4>
<p>@Model.Ingredients</p>

<h4>Instructions:</h4>
<p>@Model.Instructions</p>

<a href="/Recipe/Index" class="btn btn-secondary">Back to Recipes</a>