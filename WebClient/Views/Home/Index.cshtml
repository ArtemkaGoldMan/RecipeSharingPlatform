@model List<WebClient.Models.RecipeViewModel>

@{
    ViewData["Title"] = "Home";
}

<h1>All Recipes</h1>

@if (Model == null || !Model.Any())
{
    <p>No recipes found. Please add some recipes!</p>
}
else
{
    <div class="row">
        @foreach (var recipe in Model)
        {
            <div class="col-md-4">
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">@recipe.Title</h5>
                        <p class="card-text"><strong>Category:</strong> @recipe.Category</p>
                        <p>@recipe.Description</p>
                        <a href="/Recipe/Details/@recipe.Id" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
}